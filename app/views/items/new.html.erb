<div style="text-align: center; max-width: 500px; margin: 0 auto; padding: 20px;">
  <div style="background-color: white; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); padding: 30px; margin: 20px 0;">
    <h2 style="color: #007bff; margin-bottom: 30px;">Add New Item</h2>
    
    <% if @item.errors.any? %>
      <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 6px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
        <h4 style="margin: 0 0 10px 0;">Please fix the following errors:</h4>
        <ul style="margin: 0; padding-left: 20px;">
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= form_with model: @item, local: true do |f| %>
      <div style="margin-bottom: 20px;">
        <%= f.text_field :name, placeholder: "Item name", style: "width: 100%; padding: 12px; border: 2px solid #ddd; border-radius: 6px; font-size: 16px; box-sizing: border-box;" %>
      </div>
      
      <div style="margin-bottom: 20px;">
        <%= f.number_field :price, placeholder: "Price", step: 0.01, min: 0.01, style: "width: 100%; padding: 12px; border: 2px solid #ddd; border-radius: 6px; font-size: 16px; box-sizing: border-box;" %>
      </div>
      
      <div style="margin-top: 30px;">
        <%= f.submit "Add Item", style: "background-color: #28a745; color: white; border: none; padding: 12px 30px; border-radius: 6px; font-size: 16px; font-weight: bold; cursor: pointer; width: 100%;" %>
      </div>
    <% end %>
    
    <div style="margin-top: 20px;">
      <%= link_to "Back to Items", items_path, style: "color: #6c757d; text-decoration: none; font-size: 14px;" %>
    </div>
  </div>
</div>
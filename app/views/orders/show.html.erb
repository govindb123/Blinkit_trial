<div style="text-align: center; max-width: 600px; margin: 0 auto; padding: 20px;">
  <div style="background-color: white; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); padding: 30px; margin: 20px 0;">
    <h2 style="color: #007bff; margin-bottom: 20px;">Order Details</h2>

    <div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 20px 0;">
      <p style="font-size: 18px; margin: 10px 0;"><strong>Order #<%= @order.id %></strong></p>
      <p style="margin: 10px 0;"><strong>Status:</strong> <span style="color: <%= @order.status == 'pending' ? '#dc3545' : '#28a745' %>; font-weight: bold;"><%= @order.status.capitalize %></span></p>
      <p style="margin: 10px 0;"><strong>Order Date:</strong> <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <p style="margin: 10px 0;"><strong>Delivery Address:</strong> <%= @order.address %></p>
    </div>

    <h3 style="color: #333; margin: 20px 0;">Items Ordered:</h3>
    <% @order_items.each do |order_item| %>
      <div style="background-color: #e3f2fd; border-radius: 8px; padding: 15px; margin: 10px 0; border-left: 4px solid #007bff;">
        <strong><%= order_item.item.name %></strong> - <span style="color: #28a745; font-size: 16px;">â‚¹<%= order_item.item.price %></span>
        <br><small style="color: #666;">Quantity: <%= order_item.quantity %></small>
      </div>
    <% end %>

    <div style="margin-top: 30px;">
      <%= link_to "Back to Orders", orders_path, style: "background-color: #007bff; color: white; padding: 12px 24px; text-decoration: none; border-radius: 6px; font-weight: bold; display: inline-block; transition: background-color 0.3s;" %>
    </div>
  </div>
</div>